<Window x:Class="Laba17_Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Laba17_Wpf"
        mc:Ignorable="d" Height="170" Width="400" HorizontalAlignment="Center" VerticalAlignment="Center">
    
    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
        <StackPanel Width="400" Height="150">
            <local:ColorPicker x:Name="ColorPicker"
                               VerticalAlignment="Top"
                               HorizontalAlignment="Center"
                               Margin="10"
                               ColorChanged="colorPicker_ColorChanged"/>
        </StackPanel>
    </Grid>
</Window>
